<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_validator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg2"
        app:cardUseCompatPadding="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_68">
            <agency.tango.android.avatarview.views.AvatarView
                android:id="@+id/avatar_validator"
                android:layout_width="@dimen/space_44"
                android:layout_height="@dimen/space_44"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_12"
                app:av_border_color="@color/colorGray3"
                app:av_border_width="1dp"
                app:av_text_size_percentage="40" />
            <View
                android:id="@+id/line_validator"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/avatar_validator"
                android:background="@color/colorGray3"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_10"/>

            <ImageView
                android:id="@+id/arrow_validator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_next_gr"
                android:layout_marginRight="@dimen/space_8"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/line_validator"
                android:layout_toLeftOf="@+id/arrow_validator"
                android:layout_marginLeft="@dimen/space_8"
                android:layout_marginRight="@dimen/space_8"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/moniker_validator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_ss_11_white"
                        android:text="Cosmostation"/>
                    <TextView
                        android:id="@+id/delegate_amount_validator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ss_11_white"
                        android:text="52,432,123.848390"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        style="@style/font_ss_9_gray1"
                        android:text="Rewards"/>
                    <TextView
                        android:id="@+id/reward_amount_validator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ss_11_gray1"
                        android:text="23.349000"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>


