<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/chain_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_cosmos"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_bar_height"
        android:background="@color/colorBlack"
        android:theme="@style/AppTheme.AppBarOverlay">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font_ssm_17_white"
            android:text="@string/str_proposal_detail"/>
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/btn_action"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45"
        android:minHeight="@dimen/space_45"
        android:background="@drawable/btn_trans_with_border"
        style="@style/font_ss_14_photon"
        android:textAllCaps="false"
        android:text="@string/str_vote_to"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_action"
        android:layout_below="@+id/tool_bar"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_marginRight="@dimen/space_12"
                app:cardBackgroundColor="@color/colorTransBg"
                app:cardCornerRadius="@dimen/space_6"
                app:cardElevation="1.5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_16">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/space_16"
                            android:background="@drawable/box_round_vote"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/vote_status_img"
                                android:layout_width="@dimen/space_6"
                                android:layout_height="@dimen/space_6"
                                android:src="@drawable/ic_rejected_img" />
                            <TextView
                                android:id="@+id/vote_status"
                                style="@style/font_ss_11_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/space_4"
                                android:text="DepositPeriod" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/vote_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/space_12"
                            android:padding="@dimen/space_8"
                            android:src="@drawable/wallet_detail_btn" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/vote_title"
                        style="@style/font_ss_14_white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_12"
                        android:layout_marginRight="@dimen/space_16"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="#4. Cosmos Hub 3 Upgrade Proposal A" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_12"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_proposer"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/vote_proposer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text="-"
                            android:singleLine="true"
                            android:ellipsize="middle"
                            style="@style/font_ss_12_gray1"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_proposal_type"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/vote_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text="-"
                            style="@style/font_ss_12_gray1"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_voting_start_time"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/vote_startTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text="-"
                            style="@style/font_ss_12_gray1"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_voting_end_time"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/vote_endTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text="-"
                            style="@style/font_ss_12_gray1"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16"
                        android:background="@color/colorGray3" />
                    <TextView
                        style="@style/font_ss_12_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_16"
                        android:text="@string/str_voting_description" />
                    <TextView
                        android:id="@+id/vote_msg"
                        style="@style/font_ss_12_gray1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_4"
                        android:layout_marginLeft="@dimen/space_16"
                        android:layout_marginRight="@dimen/space_16"
                        android:lineSpacingExtra="1sp"
                        android:maxLines="3"
                        android:autoLink="web"
                        android:clickable="true"
                        android:textColorLink="@color/colorPhoton"
                        android:text="This is a proposal to approve these high-level changes for a final vote for what will become Cosmos Hub 3. Please read them carefully: https://github.com/cosmos/cosmos-sdk/blob/rc1/v0.36.0/CHANGELOG.md -=-=- If approved, and assuming that testing is successful, there will be a second proposal called"/>
                    <ImageView
                        android:id="@+id/vote_btn_expend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/space_8"
                        android:src="@drawable/arrow_down_gr"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_12"
                android:layout_marginRight="@dimen/space_12"
                android:layout_marginTop="@dimen/space_4"
                app:cardBackgroundColor="@color/colorTransBg"
                app:cardCornerRadius="@dimen/space_6"
                app:cardElevation="1.5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_16"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/vote_turnout_layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_turnout"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/vote_turnout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            style="@style/font_ss_12_gray1"
                            android:text="78.23%"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/vote_quorum_layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_8"
                        android:layout_marginBottom="@dimen/space_6"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_quorum"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/vote_quorum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="right"
                            android:text="40.00%"
                            style="@style/font_ss_12_gray1"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_6">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/box_vote_quorum"
                            android:layout_marginRight="@dimen/space_4"
                            android:padding="@dimen/space_14">
                            <ImageView
                                android:id="@+id/vote_yes_voted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_check_red"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/vote_yes_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/font_ss_14_vote_yes"
                                android:text="@string/str_vote_yes"/>
                            <ProgressBar
                                android:id="@+id/vote_yes_progress"
                                android:layout_below="@+id/vote_yes_title"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/space_6"
                                android:layout_marginTop="@dimen/space_12"
                                android:maxHeight="@dimen/space_6"
                                android:splitTrack="false"
                                android:progress="50"
                                android:max="100"
                                android:progressDrawable="@drawable/progress_vote_yes"
                                style="?android:attr/progressBarStyleHorizontal"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/vote_yes_progress"
                                android:layout_marginTop="@dimen/space_12">
                                <TextView
                                    android:id="@+id/vote_yes_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    style="@style/font_ss_14_white"
                                    android:text="80.55%"/>
                                <TextView
                                    android:id="@+id/vote_yes_cnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    style="@style/font_ss_11_white"
                                    android:text="124"/>
                                <ImageView
                                    android:id="@+id/vote_yes_cnt_img"
                                    android:layout_toLeftOf="@+id/vote_yes_cnt"
                                    android:layout_marginRight="@dimen/space_2"
                                    android:layout_centerVertical="true"
                                    android:layout_width="@dimen/space_12"
                                    android:layout_height="@dimen/space_12"
                                    android:src="@drawable/ic_user_ic"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/box_vote_quorum"
                            android:layout_marginLeft="@dimen/space_4"
                            android:padding="@dimen/space_14">
                            <ImageView
                                android:id="@+id/vote_no_voted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_check_red"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/vote_no_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/font_ss_14_vote_no"
                                android:text="@string/str_vote_no"/>
                            <ProgressBar
                                android:id="@+id/vote_no_progress"
                                android:layout_below="@+id/vote_no_title"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/space_6"
                                android:layout_marginTop="@dimen/space_12"
                                android:maxHeight="@dimen/space_6"
                                android:splitTrack="false"
                                android:progress="50"
                                android:max="100"
                                android:progressDrawable="@drawable/progress_vote_no"
                                style="?android:attr/progressBarStyleHorizontal"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/vote_no_progress"
                                android:layout_marginTop="@dimen/space_12">
                                <TextView
                                    android:id="@+id/vote_no_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    style="@style/font_ss_14_white"
                                    android:text="80.55%"/>
                                <TextView
                                    android:id="@+id/vote_no_cnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    style="@style/font_ss_11_white"
                                    android:text="124"/>
                                <ImageView
                                    android:id="@+id/vote_no_cnt_img"
                                    android:layout_toLeftOf="@+id/vote_no_cnt"
                                    android:layout_marginRight="@dimen/space_2"
                                    android:layout_centerVertical="true"
                                    android:layout_width="@dimen/space_12"
                                    android:layout_height="@dimen/space_12"
                                    android:src="@drawable/ic_user_ic"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_10">
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/box_vote_quorum"
                            android:layout_marginRight="@dimen/space_4"
                            android:padding="@dimen/space_14">
                            <ImageView
                                android:id="@+id/vote_veto_voted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_check_red"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/vote_veto_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/font_ss_14_vote_veto"
                                android:text="@string/str_vote_veto"/>
                            <ProgressBar
                                android:id="@+id/vote_veto_progress"
                                android:layout_below="@+id/vote_veto_title"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/space_6"
                                android:layout_marginTop="@dimen/space_12"
                                android:maxHeight="@dimen/space_6"
                                android:splitTrack="false"
                                android:progress="50"
                                android:max="100"
                                android:progressDrawable="@drawable/progress_vote_veto"
                                style="?android:attr/progressBarStyleHorizontal"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/vote_veto_progress"
                                android:layout_marginTop="@dimen/space_12">
                                <TextView
                                    android:id="@+id/vote_vetos_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    style="@style/font_ss_14_white"
                                    android:text="80.55%"/>
                                <TextView
                                    android:id="@+id/vote_veto_cnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    style="@style/font_ss_11_white"
                                    android:text="124"/>
                                <ImageView
                                    android:id="@+id/vote_veto_cnt_img"
                                    android:layout_toLeftOf="@+id/vote_veto_cnt"
                                    android:layout_marginRight="@dimen/space_2"
                                    android:layout_centerVertical="true"
                                    android:layout_width="@dimen/space_12"
                                    android:layout_height="@dimen/space_12"
                                    android:src="@drawable/ic_user_ic"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:background="@drawable/box_vote_quorum"
                            android:layout_marginLeft="@dimen/space_4"
                            android:padding="@dimen/space_14">
                            <ImageView
                                android:id="@+id/vote_abstain_voted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/ic_check_red"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/vote_abstain_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/font_ss_14_vote_abstain"
                                android:text="@string/str_vote_abstain"/>
                            <ProgressBar
                                android:id="@+id/vote_abstain_progress"
                                android:layout_below="@+id/vote_abstain_title"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/space_6"
                                android:layout_marginTop="@dimen/space_12"
                                android:maxHeight="@dimen/space_6"
                                android:splitTrack="false"
                                android:progress="50"
                                android:max="100"
                                android:progressDrawable="@drawable/progress_vote_abstain"
                                style="?android:attr/progressBarStyleHorizontal"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/vote_abstain_progress"
                                android:layout_marginTop="@dimen/space_12">
                                <TextView
                                    android:id="@+id/vote_abstain_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    style="@style/font_ss_14_white"
                                    android:text="80.55%"/>
                                <TextView
                                    android:id="@+id/vote_abstain_cnt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    style="@style/font_ss_11_white"
                                    android:text="124"/>
                                <ImageView
                                    android:id="@+id/vote_abstain_cnt_img"
                                    android:layout_toLeftOf="@+id/vote_abstain_cnt"
                                    android:layout_marginRight="@dimen/space_2"
                                    android:layout_centerVertical="true"
                                    android:layout_width="@dimen/space_12"
                                    android:layout_height="@dimen/space_12"
                                    android:src="@drawable/ic_user_ic"/>
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>