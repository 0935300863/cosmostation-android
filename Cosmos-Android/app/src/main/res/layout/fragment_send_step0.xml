<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginTop="@dimen/space_16"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/receiver_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:hint="@string/str_recipient_address"
                android:textCursorDrawable="@drawable/white_cursor"
                android:maxLength="46"
                android:textColorHint="@color/colorGray4"
                android:background="@drawable/edittext_box"
                android:paddingLeft="@dimen/space_16"
                android:paddingRight="@dimen/space_16"
                style="@style/font_ss_12_white"
                android:imeOptions="actionNext"/>
            <ImageView
                android:id="@+id/receiver_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_8"
                android:padding="@dimen/space_18"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:background="@drawable/qrcode_ic"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btn_qr"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_36"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/btn_trans_with_border">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qr_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    style="@style/font_ss_9_white"
                    android:text="@string/str_qr_code"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_history"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_36"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_8"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/btn_trans_with_border">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/list_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    style="@style/font_ss_9_white"
                    android:text="@string/str_recent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_paste"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_36"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/space_8"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/btn_trans_with_border">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/copy_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    style="@style/font_ss_9_white"
                    android:text="@string/str_paste"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/space_4"
            android:text="TO TEST ADDRESS"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:textAllCaps="false"
            android:text="@string/str_cancel"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_photon"
            android:textColor="@color/color_btn_photon"
            android:textAllCaps="false"
            android:text="@string/str_next"/>
    </LinearLayout>
</RelativeLayout>