<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_proposal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_12"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/proposal_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/proposal_status"
                    android:minWidth="@dimen/space_12"
                    android:gravity="left"
                    style="@style/font_ss_14_photon"
                    android:text="1"/>

                <TextView
                    android:id="@+id/proposal_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    style="@style/font_ss_14_atom"
                    android:text="DepositPeriod"/>
                <TextView
                    android:id="@+id/proposal_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/proposal_status"
                    android:layout_toRightOf="@+id/proposal_id"
                    android:layout_toLeftOf="@+id/proposal_status"
                    android:layout_marginLeft="@dimen/space_4"
                    android:layout_marginRight="@dimen/space_12"
                    style="@style/font_ss_14_white"
                    android:ellipsize="end"
                    android:text="Test insuficient deposits"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/proposal_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4"
                style="@style/font_ss_11_gray1"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="sdfdsfsdfsdfsdfsdfsdf"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_6">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/proposal_submit_time"
                    style="@style/font_ss_9_white"
                    android:text="@string/str_submit_time"/>
                <TextView
                    android:id="@+id/proposal_submit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    style="@style/font_ss_9_gray1"
                    android:text="23432432234"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/proposal_voting_start_time"
                    style="@style/font_ss_9_white"
                    android:text="@string/str_voting_start_time"/>
                <TextView
                    android:id="@+id/proposal_voting_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    style="@style/font_ss_9_gray1"
                    android:text="23432432234"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/proposal_voting_end_time"
                    style="@style/font_ss_9_white"
                    android:text="@string/str_voting_end_time"/>
                <TextView
                    android:id="@+id/proposal_voting_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    style="@style/font_ss_9_gray1"
                    android:text="23432432234"/>
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>