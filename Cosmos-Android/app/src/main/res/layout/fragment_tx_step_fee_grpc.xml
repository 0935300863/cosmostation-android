<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/top_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_total_spend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="@dimen/space_6"
            app:cardElevation="1.5dp"
            app:cardBackgroundColor="@color/colorTransBg"
            app:cardUseCompatPadding="true"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_16">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_20">
                    <TextView
                        android:id="@+id/spend_available_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_available_amount"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spend_available_title">
                        <TextView
                            android:id="@+id/spend_available_denom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="COIN"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/spend_available_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/spend_available_denom"
                            android:layout_toLeftOf="@+id/spend_available_denom"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/spend_available_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    style="@style/font_ss_10_gray1"
                    android:text="-"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space_12"
                    android:background="@color/colorGray3"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/spend_spend_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_to_send_amount"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spend_spend_title">
                        <TextView
                            android:id="@+id/spend_spend_denom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="COIN"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/spend_spend_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/spend_spend_denom"
                            android:layout_toLeftOf="@+id/spend_spend_denom"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/spend_spend_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    style="@style/font_ss_10_gray1"
                    android:text="-"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_12">
                    <TextView
                        android:id="@+id/spend_fee_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_fees"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spend_fee_title">
                        <TextView
                            android:id="@+id/spend_fee_denom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="COIN"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/spend_fee_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/spend_fee_denom"
                            android:layout_toLeftOf="@+id/spend_fee_denom"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/spend_fee_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    style="@style/font_ss_10_gray1"
                    android:text="-"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/space_12"
                    android:background="@color/colorGray3"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/spend_remain_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_remaining_available"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/spend_remain_title">
                        <TextView
                            android:id="@+id/spend_remain_denom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="COIN"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/spend_remain_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/spend_remain_denom"
                            android:layout_toLeftOf="@+id/spend_remain_denom"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/spend_remain_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    style="@style/font_ss_10_gray1"
                    android:text="-"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_only_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="@dimen/space_6"
            app:cardElevation="1.5dp"
            app:cardBackgroundColor="@color/colorTransBg"
            app:cardUseCompatPadding="true"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_16">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/fee_fee_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_fees"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/fee_fee_title">
                        <TextView
                            android:id="@+id/fee_fee_denom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="COIN"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/fee_fee_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/fee_fee_denom"
                            android:layout_toLeftOf="@+id/fee_fee_denom"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>
                <TextView
                    android:id="@+id/fee_fee_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    style="@style/font_ss_10_gray1"
                    android:text="-"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/rate_control_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layer"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">


            <com.google.android.material.button.MaterialButtonToggleGroup
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/toggle_button_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AAAA"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AAAA"/>
                <com.google.android.material.button.MaterialButton
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AAAA"/>

            </com.google.android.material.button.MaterialButtonToggleGroup>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/speed_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rate_control_layer"
        android:layout_above="@+id/bottom_control_layer"
        android:layout_marginBottom="@dimen/space_24"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:id="@+id/speed_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bycicle_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_2"
            style="@style/font_ssm_17_white"
            android:text="Cosmostation Wallet is a free service."/>
        <TextView
            android:id="@+id/speed_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:gravity="center"
            style="@style/font_ss_12_gray1"
            android:text="@string/str_fee_speed_title_0"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_control_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <RelativeLayout
            android:id="@+id/btn_gas_check"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:minHeight="@dimen/space_45"
            android:background="@drawable/btn_trans_with_border"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_gas"
                android:drawablePadding="@dimen/space_4"
                android:gravity="center"
                style="@style/font_ss_14_white"
                android:text="@string/str_check_estimate_gas_amount" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_before"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_45"
                android:layout_weight="1"
                android:minHeight="@dimen/space_45"
                android:layout_marginRight="@dimen/space_4"
                android:background="@drawable/btn_trans_with_border"
                style="@style/font_ss_14_white"
                android:textAllCaps="false"
                android:text="@string/str_back"/>
            <Button
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="@dimen/space_45"
                android:layout_weight="1"
                android:minHeight="@dimen/space_45"
                android:layout_marginLeft="@dimen/space_4"
                android:background="@drawable/btn_trans_with_border"
                style="@style/font_ss_14_photon"
                android:textColor="@color/color_btn_photon"
                android:textAllCaps="false"
                android:text="@string/str_next"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>