<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_asset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_12"
            android:paddingBottom="@dimen/space_12"
            android:paddingLeft="@dimen/space_12"
            android:paddingRight="@dimen/space_8">
            <ImageView
                android:id="@+id/asset_img"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_60"
                android:scaleType="fitXY"
                android:src="@drawable/cosmos_wh_main"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/asset_img"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/asset_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_ss_14_white"
                        android:text="IRIS"/>
                    <TextView
                        android:id="@+id/asset_fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_4"
                        android:layout_toRightOf="@+id/asset_symbol"
                        android:layout_alignBaseline="@+id/asset_symbol"
                        style="@style/font_ss_12_gray1"
                        android:text="(IRIS Network)"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/space_2"
                    android:layout_gravity="right">
                    <TextView
                        android:id="@+id/asset_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="234,342,432.234243"
                        style="@style/font_ssl_12_white"/>
                    <TextView
                        android:id="@+id/asset_denom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_2"
                        android:text="IRIS"
                        style="@style/font_ss_12_atom"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/dash_atom_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2"
                    android:layout_gravity="right"
                    style="@style/font_ss_14_gray1"
                    android:text="$33.34"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>