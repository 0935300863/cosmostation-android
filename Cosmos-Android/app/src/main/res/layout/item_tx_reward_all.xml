<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_tx_distribution"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_4"
                    android:text="@string/tx_get_reward_all"
                    style="@style/font_ss_17_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_delegator"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/tx_reward_all_delegator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:gravity="right"
                    android:maxLength="1"
                    android:ellipsize="middle"
                    android:text="-"
                    style="@style/font_ss_12_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_validators"
                    style="@style/font_ss_12_gray1"/>
                <LinearLayout
                    android:id="@+id/tx_reward_all_validator0"
                    android:layout_marginTop="@dimen/space_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tx_reward_moniker0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/space_4"
                            android:gravity="right"
                            android:maxWidth="@dimen/space_180"
                            android:ellipsize="end"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/tx_reward_validator0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tx_reward_moniker0"
                            android:gravity="right"
                            android:maxLength="1"
                            android:ellipsize="middle"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tx_reward_amount_symbol0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="IRIS"
                            style="@style/font_ss_12_iris"/>
                        <TextView
                            android:id="@+id/tx_reward_amount0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tx_reward_amount_symbol0"
                            android:layout_toLeftOf="@+id/tx_reward_amount_symbol0"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tx_reward_all_validator1"
                    android:layout_marginTop="@dimen/space_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tx_reward_moniker1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/space_4"
                            android:gravity="right"
                            android:maxWidth="@dimen/space_180"
                            android:ellipsize="end"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/tx_reward_validator1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tx_reward_moniker1"
                            android:gravity="right"
                            android:maxLength="1"
                            android:ellipsize="middle"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tx_reward_amount_symbol1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="IRIS"
                            style="@style/font_ss_12_iris"/>
                        <TextView
                            android:id="@+id/tx_reward_amount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tx_reward_amount_symbol1"
                            android:layout_toLeftOf="@+id/tx_reward_amount_symbol1"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tx_reward_all_validator2"
                    android:layout_marginTop="@dimen/space_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tx_reward_moniker2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/space_4"
                            android:gravity="right"
                            android:maxWidth="@dimen/space_180"
                            android:ellipsize="end"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/tx_reward_validator2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tx_reward_moniker2"
                            android:gravity="right"
                            android:maxLength="1"
                            android:ellipsize="middle"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tx_reward_amount_symbol2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="IRIS"
                            style="@style/font_ss_12_iris"/>
                        <TextView
                            android:id="@+id/tx_reward_amount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tx_reward_amount_symbol2"
                            android:layout_toLeftOf="@+id/tx_reward_amount_symbol2"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tx_reward_all_validator3"
                    android:layout_marginTop="@dimen/space_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tx_reward_moniker3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/space_4"
                            android:gravity="right"
                            android:maxWidth="@dimen/space_180"
                            android:ellipsize="end"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                        <TextView
                            android:id="@+id/tx_reward_validator3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tx_reward_moniker3"
                            android:gravity="right"
                            android:maxLength="1"
                            android:ellipsize="middle"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tx_reward_amount_symbol3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="IRIS"
                            style="@style/font_ss_12_iris"/>
                        <TextView
                            android:id="@+id/tx_reward_amount3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/tx_reward_amount_symbol3"
                            android:layout_toLeftOf="@+id/tx_reward_amount_symbol3"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="-"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tx_reward_all_commission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_commission"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4">
                    <TextView
                        android:id="@+id/tx_reward_all_commission_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="IRIS"
                        style="@style/font_ss_12_iris"/>
                    <TextView
                        android:id="@+id/tx_reward_all_commission_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_reward_all_commission_symbol"
                        android:layout_toLeftOf="@+id/tx_reward_all_commission_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_amount_sum"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4">
                    <TextView
                        android:id="@+id/tx_reward_all_sum_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="IRIS"
                        style="@style/font_ss_12_iris"/>
                    <TextView
                        android:id="@+id/tx_reward_all_sum_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tx_reward_all_sum_symbol"
                        android:layout_toLeftOf="@+id/tx_reward_all_sum_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="-"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>