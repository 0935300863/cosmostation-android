<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_validator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_68">
            <agency.tango.android.avatarview.views.AvatarView
                android:id="@+id/avatar_validator"
                android:layout_width="@dimen/space_44"
                android:layout_height="@dimen/space_44"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_12"
                app:av_border_color="@color/colorGray3"
                app:av_border_width="1dp"
                app:av_text_size_percentage="40" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_next_gr"
                android:layout_marginRight="@dimen/space_8"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/avatar_validator"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_centerVertical="true"
                style="@style/font_ss_11_white"
                android:text="Cosmostation"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>