<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg2"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_80"
            android:padding="@dimen/space_12">
            <TextView
                android:id="@+id/history_type"
                android:layout_width="@dimen/space_80"
                android:layout_height="wrap_content"
                style="@style/font_ssm_17_white"
                android:text="Send"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/history_type"
                android:background="@color/colorGray3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical|right">
                <TextView
                    android:id="@+id/history_time"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    style="@style/font_ss_11_white"
                    android:text="2018-12-23"/>
                <TextView
                    android:id="@+id/history_atom"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    style="@style/font_ss_11_white"
                    android:text="20,000"/>
                <TextView
                    android:id="@+id/history_photon"
                    android:layout_width="@dimen/space_80"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    style="@style/font_ss_11_white"
                    android:text="600,000"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>