    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_control">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/main_net_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginRight="@dimen/space_16"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="vertical"
                android:visibility="gone">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <EditText
                        android:id="@+id/et_amount_atom"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_50"
                        android:textCursorDrawable="@drawable/white_cursor"
                        android:maxLength="46"
                        android:textColorHint="@color/colorGray4"
                        android:background="@drawable/edittext_box"
                        android:paddingLeft="@dimen/space_60"
                        android:paddingRight="@dimen/space_12"
                        style="@style/font_ss_12_white"
                        android:inputType="numberDecimal"
                        android:imeOptions="actionDone"
                        android:gravity="center_vertical|right"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_12"
                        android:text="@string/s_atom"
                        style="@style/font_ss_14_atom" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/space_4">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            style="@style/font_ss_11_gray1"
                            android:text="Available : "/>
                        <TextView
                            android:id="@+id/tv_max_atom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            style="@style/font_ss_11_gray1"
                            android:text="12,343,343.000000"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_atom_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ss_11_red"
                        android:text="@string/error_invalid_amounts"
                        android:visibility="gone"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/test_net_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_16"
                android:layout_marginRight="@dimen/space_16"
                android:layout_marginTop="@dimen/space_16"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">
                    <EditText
                        android:id="@+id/et_amount_muon"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_50"
                        android:textCursorDrawable="@drawable/white_cursor"
                        android:maxLength="46"
                        android:textColorHint="@color/colorGray4"
                        android:background="@drawable/edittext_box"
                        android:paddingLeft="@dimen/space_60"
                        android:paddingRight="@dimen/space_12"
                        style="@style/font_ss_12_white"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:gravity="center_vertical|right"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_12"
                        android:text="@string/s_muon"
                        style="@style/font_ss_14_atom" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/space_4">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            style="@style/font_ss_11_gray1"
                            android:text="Available : "/>
                        <TextView
                            android:id="@+id/tv_max_muon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            style="@style/font_ss_11_gray1"
                            android:text="12,343,343.000000"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_moun_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ss_11_red"
                        android:text="@string/error_invalid_amounts"
                        android:visibility="gone"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/space_16">
                    <EditText
                        android:id="@+id/et_amount_photino"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_50"
                        android:textCursorDrawable="@drawable/white_cursor"
                        android:maxLength="46"
                        android:textColorHint="@color/colorGray4"
                        android:background="@drawable/edittext_box"
                        android:paddingLeft="@dimen/space_60"
                        android:paddingRight="@dimen/space_12"
                        style="@style/font_ss_12_white"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:gravity="center_vertical|right"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/space_12"
                        android:text="@string/s_photino"
                        style="@style/font_ss_14_photon" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/space_4">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            style="@style/font_ss_11_gray1"
                            android:text="Available : "/>
                        <TextView
                            android:id="@+id/tv_max_photino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            style="@style/font_ss_11_gray1"
                            android:text="12,343,343.000000"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_photino_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ss_11_red"
                        android:text="@string/error_invalid_amounts"
                        android:visibility="gone"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>




    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_before"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:textAllCaps="false"
            android:text="@string/str_back"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_photon"
            android:textColor="@color/color_btn_photon"
            android:textAllCaps="false"
            android:text="@string/str_next"/>
    </LinearLayout>
</RelativeLayout>