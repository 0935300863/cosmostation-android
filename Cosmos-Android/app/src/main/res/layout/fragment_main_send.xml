<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/layer_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/test_net"
        android:visibility="gone"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/layer_refresher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/layer_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/space_4"
                android:paddingBottom="@dimen/space_8"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6"
                    app:cardElevation="1.5dp"
                    app:cardBackgroundColor="@color/colorTransBg"
                    app:cardUseCompatPadding="true" >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/space_16">
                        <ImageView
                            android:id="@+id/address_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/space_12"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/qrcode_ic"/>
                        <LinearLayout
                            android:layout_toLeftOf="@+id/address_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingBottom="@dimen/space_16"
                            android:paddingTop="@dimen/space_12"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/font_ss_14_white"
                                android:singleLine="true"
                                android:text="My Address"/>
                            <TextView
                                android:id="@+id/account_Address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_4"
                                style="@style/font_ss_11_white"
                                android:singleLine="true"
                                android:text="cosmos1gfzexy3z0qfc97mjudjy5zeg2fje6k442phy6r"/>
                        </LinearLayout>
                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_8"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6"
                    app:cardElevation="1.5dp"
                    app:cardBackgroundColor="@color/colorTransBg2"
                    app:cardUseCompatPadding="true" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/space_16">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/dash_atom_icon"
                                android:layout_width="@dimen/space_20"
                                android:layout_height="@dimen/space_20"
                                android:layout_centerVertical="true"
                                android:src="@drawable/atom_ic"/>
                            <TextView
                                android:id="@+id/dash_atom_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/dash_atom_icon"
                                android:layout_marginLeft="@dimen/space_8"
                                android:layout_centerVertical="true"
                                android:text="ATOM"
                                style="@style/font_ss_14_atom"/>
                            <TextView
                                android:id="@+id/dash_atom_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="right"
                                android:text="2,132,232.232145"
                                style="@style/font_ssl_14_white"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_12"
                            android:background="@color/colorGray3"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_12">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Undelegate"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_atom_undelegate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="232,743.738291"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delegate"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_atom_delegate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="7,542,325,743.000000"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Unbonding"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_atom_unbonding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="500.000000"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reward"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_atom_reward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="0.342123"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_8"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6"
                    app:cardElevation="1.5dp"
                    app:cardBackgroundColor="@color/colorTransBg2"
                    app:cardUseCompatPadding="true" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/space_16">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/dash_photon_icon"
                                android:layout_width="@dimen/space_20"
                                android:layout_height="@dimen/space_20"
                                android:layout_centerVertical="true"
                                android:src="@drawable/photon_ic"/>
                            <TextView
                                android:id="@+id/dash_photon_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/dash_photon_icon"
                                android:layout_marginLeft="@dimen/space_8"
                                android:layout_centerVertical="true"
                                android:text="PHOTON"
                                style="@style/font_ss_14_photon"/>
                            <TextView
                                android:id="@+id/dash_photon_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="right"
                                android:text="₩ 12,3434,324"
                                style="@style/font_ssl_14_white"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_12"
                            android:background="@color/colorGray3"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_12">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Balance"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_photon_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="232,743.738291"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reward"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/dash_photon_reward"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="right"
                                android:text="0.342123"
                                style="@style/font_ssl_12_white"/>
                        </RelativeLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card_validator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    android:layout_marginTop="@dimen/space_12"
                    android:layout_marginBottom="@dimen/space_12"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6"
                    app:cardElevation="1.5dp"
                    app:cardBackgroundColor="@color/colorTransBg2"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_16"
                            android:src="@drawable/reward_img"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_8"
                            style="@style/font_ssm_17_white"
                            android:text="@string/str_let_start_cosmos"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/space_6"
                            android:layout_marginBottom="@dimen/space_24"
                            style="@style/font_ss_11_gray1"
                            android:text="@string/str_let_start_cosmos2"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/space_12"
                            android:layout_marginLeft="@dimen/space_16"
                            android:layout_marginRight="@dimen/space_16"
                            android:background="@color/colorGray3"
                            android:visibility="gone"/>

                        <Button
                            android:id="@+id/btn_start_delegate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="@dimen/space_44"
                            android:background="?android:attr/selectableItemBackground"
                            style="@style/font_ss_14_photon"
                            android:text="@string/str_ok"
                            android:visibility="gone"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>



</RelativeLayout>

