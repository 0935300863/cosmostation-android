<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:id="@+id/validator_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:background="@android:color/transparent"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorHeight="2dp"
        app:tabIndicatorColor="@color/colorAtom"
        app:tabIconTint="@color/colorAtom"
        android:elevation="4dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray4"
        android:layout_below="@+id/validator_tab"
        android:layout_marginTop="-1dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/validator_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/validator_tab"/>
</RelativeLayout>
