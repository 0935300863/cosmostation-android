<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/space_16">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16"
            android:background="@color/colorTransBg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_ss_14_gray1"
                android:text="@string/str_token_swap_input_coin"/>
            <RelativeLayout
                android:id="@+id/btn_to_input_coin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_12">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:background="@drawable/edittext_box"/>
                <ImageView
                    android:id="@+id/img_input_coin"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_centerVertical="true"
                    android:src="@drawable/token_ic"/>
                <TextView
                    android:id="@+id/txt_input_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_input_coin"
                    android:layout_marginLeft="@dimen/space_6"
                    style="@style/font_ss_14_white"
                    android:text="Coin"/>
                <ImageView
                    android:id="@+id/img_input_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_down_gr"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16"
            android:layout_marginTop="@dimen/space_16"
            android:background="@color/colorTransBg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_ss_14_gray1"
                android:text="@string/str_token_swap_output_coin"/>
            <RelativeLayout
                android:id="@+id/btn_to_output_coin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:layout_marginTop="@dimen/space_12">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_50"
                    android:background="@drawable/edittext_box"/>
                <ImageView
                    android:id="@+id/img_output_coin"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_centerVertical="true"
                    android:src="@drawable/token_ic"/>
                <TextView
                    android:id="@+id/txt_output_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img_output_coin"
                    android:layout_marginLeft="@dimen/space_6"
                    style="@style/font_ss_14_white"
                    android:text="Coin"/>
                <ImageView
                    android:id="@+id/img_output_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/space_16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_down_gr"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorTransBg"
            android:layout_marginTop="@dimen/space_16"
            android:padding="@dimen/space_16">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/str_pool_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_pool_id"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/str_pool_id">
                    <TextView
                        android:id="@+id/str_token_swap_pool_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="2"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12">
                <TextView
                    android:id="@+id/str_token_swap_rate_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_token_swap_rate_coin"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/str_token_swap_rate_title"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/token_swap_input_coin_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/token_swap_input_coin_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="1.00000"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/token_swap_input_coin_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/token_swap_input_coin_amount"
                        android:text="OSMO"
                        style="@style/font_ss_12_atom"/>
                    <TextView
                        android:id="@+id/token_swap_rate_vs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/token_swap_input_coin_symbol"
                        android:text=" : "
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/token_swap_output_coin_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/token_swap_rate_vs"
                        android:layout_alignBaseline="@+id/token_swap_output_coin_symbol"
                        android:layout_marginRight="@dimen/space_2"
                        android:text="0,74165165"
                        style="@style/font_ss_12_white"/>
                    <TextView
                        android:id="@+id/token_swap_output_coin_symbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/token_swap_output_coin_amount"
                        android:text="ATOM"
                        style="@style/font_ss_12_atom"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_12">
                <TextView
                    android:id="@+id/str_swap_fee_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_token_swap_fee"
                    style="@style/font_ss_12_gray1"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/str_swap_fee_title">
                    <TextView
                        android:id="@+id/token_swap_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="0.30%"
                        style="@style/font_ss_12_white"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_start_swap"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_photon"
            android:textColor="@color/color_btn_photon"
            android:textAllCaps="false"
            android:text="@string/str_token_swap_start"/>
    </LinearLayout>
</RelativeLayout>