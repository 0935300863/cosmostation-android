<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/card_cdp_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:layout_marginTop="@dimen/space_12"
            android:layout_marginBottom="@dimen/space_12"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/cdp_markets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/cdp_market_img"
                    android:layout_width="@dimen/space_64"
                    android:layout_height="@dimen/space_64"/>
                <TextView
                    android:id="@+id/cdp_market_title"
                    android:layout_below="@+id/cdp_market_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/space_2"
                    style="@style/font_ss_12_kava"
                    android:text="BTC : USDX"/>
            </LinearLayout>

            <View
                android:id="@+id/line_market"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/cdp_markets"
                android:layout_alignBottom="@+id/cdp_markets"
                android:layout_toRightOf="@+id/cdp_markets"
                android:background="@color/colorGray3"
                android:layout_marginLeft="@dimen/space_8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/line_market"
                android:layout_marginLeft="@dimen/space_8"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_min_collateral_rate"
                        android:layout_alignBaseline="@+id/cdp_collateral_rate"
                        style="@style/font_ss_12_gray1"/>
                    <TextView
                        android:id="@+id/cdp_collateral_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ssl_17_white"
                        android:gravity="right"
                        android:text="200%"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_stability_fee"
                        style="@style/font_ss_12_gray1"/>
                    <TextView
                        android:id="@+id/cdp_stability_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ssl_12_white"
                        android:gravity="right"
                        android:text="0.5%"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_liquidation_penalty"
                        style="@style/font_ss_12_gray1"/>
                    <TextView
                        android:id="@+id/cdp_str_liquidation_penalty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        style="@style/font_ssl_12_white"
                        android:gravity="right"
                        android:text="0.5%"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_current_price"
                        style="@style/font_ss_12_gray1"/>
                    <TextView
                        android:id="@+id/cdp_str_current_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:text="$ 0.23232"
                        style="@style/font_ssl_12_white"/>
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>



