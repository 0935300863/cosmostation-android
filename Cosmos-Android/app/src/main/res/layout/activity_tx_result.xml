<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_01"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_bar_height"
        android:background="@color/colorBlack"
        android:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                style="@style/font_ssm_17_white"
                android:text="@string/str_tx_success"/>
            <ImageView
                android:id="@+id/toolbar_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/space_16"
                android:src="@drawable/close_btn"/>
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_dismiss"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:textAllCaps="false"
            android:text="@string/str_dismiss"/>
        <LinearLayout
            android:id="@+id/control_after"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_scan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45"
                android:layout_weight="1"
                android:minHeight="@dimen/space_45"
                android:background="@drawable/btn_trans_with_border"
                style="@style/font_ss_14_white"
                android:textAllCaps="false"
                android:text="@string/str_mintscan"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_45"
                    android:layout_weight="1"
                    android:minHeight="@dimen/space_45"
                    android:layout_marginRight="@dimen/space_4"
                    android:background="@drawable/btn_trans_with_border"
                    style="@style/font_ss_14_white"
                    android:textAllCaps="false"
                    android:text="@string/str_share"/>
                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/space_45"
                    android:layout_weight="1"
                    android:minHeight="@dimen/space_45"
                    android:layout_marginLeft="@dimen/space_4"
                    android:background="@drawable/btn_trans_with_border"
                    style="@style/font_ss_14_photon"
                    android:textColor="@color/color_btn_photon"
                    android:textAllCaps="false"
                    android:text="@string/str_ok"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:layout_above="@+id/bottom_control"
        android:layout_marginTop="@dimen/space_4"
        android:layout_marginBottom="@dimen/space_4"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_12"
                    android:layout_marginRight="@dimen/space_12"
                    app:cardPreventCornerOverlap="true"
                    app:cardCornerRadius="@dimen/space_6"
                    app:cardElevation="1.5dp"
                    app:cardBackgroundColor="@color/colorTransBg"
                    app:cardUseCompatPadding="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/space_16">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_tx_type"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/tx_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="-"
                                style="@style/font_ss_12_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_16">
                            <TextView
                                android:id="@+id/tx_hash_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_tx_hash"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/tx_hash"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:layout_alignParentRight="true"
                                android:singleLine="true"
                                android:ellipsize="middle"
                                android:layout_toRightOf="@+id/tx_hash_title"
                                android:layout_marginLeft="@dimen/space_16"
                                android:text="-"
                                style="@style/font_ss_12_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_16">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_tx_block_time"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/tx_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="-"
                                style="@style/font_ss_12_white"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_16">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/str_tx_block_height"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/tx_block_height"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="-"
                                style="@style/font_ss_12_white"/>
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/space_16"
                            android:layout_marginBottom="@dimen/space_16"
                            android:layout_height="1dp"
                            android:background="@color/colorGray3"/>

                        <LinearLayout
                            android:id="@+id/send_layer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_to_send_amount"
                                    style="@style/font_ss_12_gray1"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/send_atom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        style="@style/font_ssl_12_white"/>
                                    <TextView
                                        android:id="@+id/send_atom_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/space_2"
                                        android:text="@string/str_atom_c"
                                        style="@style/font_ss_12_atom"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_fees"
                                    style="@style/font_ss_12_gray1"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/send_fees"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:text="-"
                                        style="@style/font_ssl_12_white"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/space_2"
                                        android:text="@string/str_atom_c"
                                        style="@style/font_ss_12_atom"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16"
                                android:text="@string/str_recipient_address"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/send_recipient_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_8"
                                android:text="-"
                                android:singleLine="true"
                                android:ellipsize="middle"
                                style="@style/font_ss_12_white"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16"
                                android:text="@string/str_memo"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/send_memo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_8"
                                android:lines="2"
                                android:ellipsize="end"
                                android:text="-"
                                style="@style/font_ss_11_white"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/delegate_layer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_to_delegate_amount"
                                    style="@style/font_ss_12_gray1"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/delegate_atom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        style="@style/font_ssl_12_white"/>
                                    <TextView
                                        android:id="@+id/delegate_atom_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/space_2"
                                        android:text="@string/str_atom_c"
                                        style="@style/font_ss_12_atom"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_fees"
                                    style="@style/font_ss_12_gray1"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/delegate_fees"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:text="-"
                                        style="@style/font_ssl_12_white"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/space_2"
                                        android:text="@string/str_atom_c"
                                        style="@style/font_ss_12_atom"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16"
                                android:text="@string/str_to_delegate_validator"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/to_delegate_moniker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_8"
                                android:text="-"
                                style="@style/font_ss_10_white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16"
                                android:text="@string/str_memo"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/delegate_memo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_8"
                                android:lines="2"
                                android:ellipsize="end"
                                android:text="-"
                                style="@style/font_ss_12_white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/undelegate_layer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_to_undelegate_amount"
                                    style="@style/font_ss_12_gray1"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/undelegate_atom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        style="@style/font_ssl_12_white"/>
                                    <TextView
                                        android:id="@+id/undelegate_atom_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/space_2"
                                        android:text="@string/str_atom_c"
                                        style="@style/font_ss_12_atom"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_fees"
                                    style="@style/font_ss_12_gray1"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/undelegate_fees"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:text="-"
                                        style="@style/font_ssl_12_white"/>
                                    <TextView
                                        android:id="@+id/undelegate_fees_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/space_2"
                                        android:text="@string/str_atom_c"
                                        style="@style/font_ss_12_atom"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16"
                                android:text="@string/str_from_undelegate_validator"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/undelegate_moniker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_8"
                                android:text="-"
                                style="@style/font_ss_10_white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16"
                                android:text="@string/str_undelegate_complete_time"
                                style="@style/font_ss_12_gray1"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/undelegate_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_8"
                                android:text="-"
                                style="@style/font_ss_12_white"
                                android:visibility="gone"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16"
                                android:text="@string/str_memo"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/undelegate_memo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_8"
                                android:lines="2"
                                android:ellipsize="end"
                                android:text="-"
                                style="@style/font_ss_12_white"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/reward_layer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/str_fees"
                                    style="@style/font_ss_12_gray1"/>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:orientation="horizontal"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/reward_fees"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:text="-"
                                        style="@style/font_ssl_12_white"/>
                                    <TextView
                                        android:id="@+id/reward_fees_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/space_2"
                                        android:text="@string/str_atom_c"
                                        style="@style/font_ss_12_atom"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16"
                                android:text="@string/str_reward_from"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/reward_moniker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_8"
                                android:text="-"
                                style="@style/font_ss_10_white"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_16"
                                android:text="@string/str_memo"
                                style="@style/font_ss_12_gray1"/>
                            <TextView
                                android:id="@+id/reward_memo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/space_8"
                                android:lines="2"
                                android:ellipsize="end"
                                android:text="-"
                                style="@style/font_ss_12_white"/>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.v7.widget.CardView
            android:id="@+id/error_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/space_12"
            android:layout_marginRight="@dimen/space_12"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="@dimen/space_6"
            app:cardElevation="1.5dp"
            app:cardBackgroundColor="@color/colorTransBg"
            app:cardUseCompatPadding="true"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/space_16"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_tx_block_error"
                    android:textAllCaps="true"
                    style="@style/font_ss_14_red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:gravity="center"
                    android:text="@string/str_tx_error_description"
                    style="@style/font_ss_12_white"/>
                <TextView
                    android:id="@+id/error_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-"
                    style="@style/font_ss_12_red"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/loading_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
                <ProgressBar
                    android:layout_width="@dimen/space_60"
                    android:layout_height="@dimen/space_60"
                    android:indeterminateDrawable="@drawable/loading"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_4"
                    android:gravity="center"
                    android:text="@string/str_success_loading"
                    style="@style/font_ss_12_white"/>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>