<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBgRizon"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tx_total_result_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_rizon_event_horizon_status_title"
                    style="@style/font_ss_12_gray1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/tx_total_result_title"
                    android:gravity="center_vertical|right">
                    <TextView
                        android:id="@+id/tx_result_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DONE"
                        style="@style/font_ss_12_white"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_rizon_event_horizon_request_time"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/tx_request_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Aug 4, 2021 17:14:10"
                    style="@style/font_ss_12_white"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_rizon_event_horizon_request_id"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/tx_request_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="a6pw0988mS8dQfgWfQWbwfQWbw"
                    style="@style/font_ss_12_white"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16"
                android:background="@drawable/btn_trans_with_border"
                android:padding="@dimen/space_16">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/hdac_icon"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:src="@drawable/token_hdac"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/hdac_icon"
                        android:layout_marginLeft="@dimen/space_8"
                        android:text="Success"
                        android:gravity="end"
                        style="@style/font_ss_15_hdac"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/burn_from_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/burn_from_address_title">
                        <TextView
                            android:id="@+id/burn_from_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="htmreYHCaMMXCG2j5Qbn6mS8dQfQWbw"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/burn_tx_hash_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tx Hash"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/burn_tx_hash_title">
                        <TextView
                            android:id="@+id/burn_tx_hash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_2"
                            android:gravity="end"
                            android:text="5de79b4ese9e...486b14b24a98"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/burn_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Burn Amount"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:id="@+id/burn_amount_layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/burn_amount_title">
                        <TextView
                            android:id="@+id/burn_amount_layer_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="HDAC"
                            style="@style/font_ss_14_hdac"/>
                        <TextView
                            android:id="@+id/horizon_tx_fee_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/burn_amount_layer_symbol"
                            android:layout_toLeftOf="@+id/burn_amount_layer_symbol"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="22,001.52282355"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16"
                android:background="@drawable/btn_trans_with_border"
                android:padding="@dimen/space_16">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/rizon_icon"
                        android:layout_width="@dimen/space_20"
                        android:layout_height="@dimen/space_20"
                        android:src="@drawable/token_rizon"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rizon_icon"
                        android:layout_marginLeft="@dimen/space_8"
                        android:text="Success"
                        android:gravity="end"
                        style="@style/font_ss_14_rizon"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/rizon_to_address_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rizon_to_address_title">
                        <TextView
                            android:id="@+id/rizon_to_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="rizoneYHCaMMXCG2j5Qbn6mS8dQfQWbw"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/rizon_tx_hash_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tx Hash"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rizon_tx_hash_title">
                        <TextView
                            android:id="@+id/rizon_tx_hash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_2"
                            android:gravity="end"
                            android:text="5de79b4ese9e...486b14b24a98"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/space_16">
                    <TextView
                        android:id="@+id/rizon_mint_amount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Burn Amount"
                        style="@style/font_ss_12_gray1"/>
                    <RelativeLayout
                        android:id="@+id/rizon_mint_amount_layer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rizon_mint_amount_title">
                        <TextView
                            android:id="@+id/rizon_mint_symbol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="ATOLO"
                            style="@style/font_ss_14_rizon"/>
                        <TextView
                            android:id="@+id/rizon_mint_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/rizon_mint_symbol"
                            android:layout_toLeftOf="@+id/rizon_mint_symbol"
                            android:layout_marginRight="@dimen/space_2"
                            android:text="22,001.52282355"
                            style="@style/font_ss_12_white"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>