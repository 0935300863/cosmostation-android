<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginBottom="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBgRizon"
        app:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_16"
            android:paddingTop="@dimen/space_12"
            android:paddingBottom="@dimen/space_12"
            android:paddingRight="@dimen/space_4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_centerVertical="true"
                style="@style/font_ss_14_rizon"
                android:singleLine="true"
                android:text="RIZON Address"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_marginTop="@dimen/space_10"
                android:layout_centerVertical="true"
                style="@style/font_ss_14_white"
                android:singleLine="true"
                android:text="rizon136fzkc73rm5def5fngs386qdlxcuvxvrte8lk7"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_status_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="@dimen/space_6"
        app:cardElevation="1.5dp"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardUseCompatPadding="true"
        android:layout_below="@id/card_root">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_16">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tx_status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_tx_status"
                    style="@style/font_ss_12_gray1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/tx_status_title"
                    android:gravity="center_vertical|right">
                    <ImageView
                        android:id="@+id/tx_status_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_1"
                        android:layout_marginRight="@dimen/space_4"
                        android:src="@drawable/success_ic"/>
                    <TextView
                        android:id="@+id/tx_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Success"
                        style="@style/font_ss_12_white"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_token_swap_time"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/tx_block_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="2021-07-05 17:14:10"
                    style="@style/font_ss_12_white"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_16">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_token_id"
                    style="@style/font_ss_12_gray1"/>
                <TextView
                    android:id="@+id/tx_msg_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="a6pw0988mS8dQfgWfQWbwfQWbw"
                    style="@style/font_ss_12_white"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_below="@+id/card_status_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_14"
                android:layout_marginTop="@dimen/space_14"
                android:background="@drawable/box_round_darkgray">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_12_white"
                    android:layout_gravity="right"
                    android:text="htmreYHCaMMXCG2j5Qbn6mS8dQfgWfQWbw" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/space_10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_ss_12_white"
                        android:text="22,001.522823423446262355" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_6"
                        style="@style/font_ss_15_hdac"
                        android:text="HDAC" />
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/swap_icon"
                android:layout_margin="@dimen/space_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_root"
                app:srcCompat="@drawable/icon_arrow" />
            <LinearLayout
                android:layout_below="@+id/card_status_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/space_14"
                android:background="@drawable/box_round_darkgray">
                <TextView
                    android:id="@+id/rizon_to_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/font_ss_12_white"
                    android:layout_gravity="right"
                    android:text="rizon136fzkc73rm5def5fngs386qdlxcuvxvrte8lk7" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginTop="@dimen/space_10">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/font_ss_12_white"
                        android:text="22,001.262355" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_6"
                        style="@style/font_ss_14_rizon"
                        android:text="ATOLO" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/control_later"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginRight="@dimen/space_12"
        android:layout_marginTop="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/btn_done"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                style="@style/font_ssl_14_photon"
                android:text="@string/str_done" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>