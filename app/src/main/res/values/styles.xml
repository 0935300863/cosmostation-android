<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_base01</item>
        <item name="colorPrimaryDark">@color/color_base01</item>
        <item name="colorAccent">@color/color_accent_purple</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowContentTransitions">true</item>

<!--        <item name="android:windowBackground">@color/color_base01</item>-->
<!--        <item name="android:windowContentOverlay">@null</item>-->
<!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="AppTheme.Intro">
        <item name="android:windowBackground">@drawable/intro_bg</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppBottomStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet_bg</item>
    </style>

    <style name="FabLabelStyle">
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_bold</item>
        <item name="android:textSize">@dimen/space_12</item>
        <item name="android:textColor">@color/color_base01</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_marginStart">@dimen/space_8</item>
        <item name="android:layout_marginEnd">@dimen/space_8</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TransparentPopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/color_transparent</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:background">@drawable/item_popup_bg</item>
        <item name="android:textColor">@color/color_base01</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/space_16</item>
        <item name="android:layout_marginEnd">@dimen/space_16</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="android:textColorHint">@color/color_base03</item>
        <item name="hintTextColor">@color/color_base01</item>
        <item name="errorEnabled">true</item>
        <item name="colorError">@color/color_red01</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

    <style name="InputEditText" parent="">
        <item name="android:textColor">@color/color_base01</item>
        <item name="android:paddingStart">@dimen/space_16</item>
        <item name="android:paddingEnd">@dimen/space_16</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="fontFamily">@font/spoqa_han_sans_neo_bold</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="ThemeOverlay.NumberPicker" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_base07</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColorPrimary">@color/color_base01</item>
        <item name="colorControlNormal">@color/color_base01</item>
        <item name="android:textColorHint">@color/color_base03</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/spoqa_han_sans_neo_medium</item>
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:titleMargin">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ActionBarAppTheme" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="colorPrimary">@color/color_mode_base05</item>
        <item name="colorPrimaryDark">@color/color_mode_base01</item>
        <item name="colorAccent">@color/color_blue01</item>
        <item name="android:statusBarColor">@color/color_mode_base01</item>
        <item name="android:windowBackground">@color/color_mode_base01</item>
<!--        <item name="bottomSheetDialogTheme">@style/BaseBottomSheetDialog</item>-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/font_bold</item>
        <item name="actionBarStyle">@style/SolidActionBar</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@color/color_mode_base05</item>
        <item name="colorPrimary">@color/color_mode_base01</item>
        <item name="fontFamily">@font/font_semibold</item>
    </style>

    <style name="ActionBarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SolidActionBar" parent="@style/Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/ActionBarTitle</item>
    </style>

    <style name="BottomNavigationView">
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewH1" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="TextViewH2" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewH3" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewH4" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewH5" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewH6" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewH7" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewH8" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/font_semibold</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
