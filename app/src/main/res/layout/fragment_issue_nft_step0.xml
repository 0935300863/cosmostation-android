<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/nft_img_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/nft_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_240"
            android:layout_margin="@dimen/space_16"
            android:src="@drawable/box_dash_line"
            android:layerType="software" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/nft_img"
            android:layout_alignTop="@id/nft_img"
            android:layout_alignRight="@id/nft_img"
            android:layout_alignBottom="@id/nft_img"
            android:layout_margin="1dp"
            android:gravity="center"
            style="@style/font_ss_14_white"
            android:text="Add Image"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/nft_img_layer">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_6"
            android:layout_marginLeft="@dimen/space_16"
            style="@style/font_ss_14_gray1"
            android:text="NFT Name"/>
        <EditText
            android:id="@+id/nft_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:layout_marginTop="@dimen/space_6"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_24"
            android:layout_marginLeft="@dimen/space_16"
            style="@style/font_ss_14_gray1"
            android:text="NFT Description"/>
        <EditText
            android:id="@+id/nft_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_100"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:layout_marginTop="@dimen/space_6"
            android:layout_marginLeft="@dimen/space_16"
            android:layout_marginRight="@dimen/space_16"
            android:gravity="top"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16"
        android:layout_marginBottom="@dimen/space_24">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginRight="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_white"
            android:textAllCaps="false"
            android:text="@string/str_cancel"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/space_45"
            android:layout_weight="1"
            android:minHeight="@dimen/space_45"
            android:layout_marginLeft="@dimen/space_4"
            android:background="@drawable/btn_trans_with_border"
            style="@style/font_ss_14_photon"
            android:textColor="@color/color_btn_photon"
            android:textAllCaps="false"
            android:text="@string/str_next"/>
    </LinearLayout>
</RelativeLayout>