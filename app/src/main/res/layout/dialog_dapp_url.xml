<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/url_warp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhiteDayNight"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/url"
            style="@style/font_rr_14_black_daynight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_14"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginRight="@dimen/space_14"
            android:background="@drawable/box_chain_trans_border"
            android:imeOptions="actionDone"
            android:minHeight="@dimen/space_40"
            android:paddingHorizontal="14dp"
            android:singleLine="true"
            android:textColorHint="@color/colorGray1"
            android:textCursorDrawable="@null" />

        <requestFocus />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/space_10"
            android:background="@color/colorGray4" />
    </LinearLayout>

    <View
        android:id="@+id/dimmed_wrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/url_warp"
        android:background="#66000000" />
</RelativeLayout>