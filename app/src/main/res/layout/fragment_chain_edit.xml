<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loading"
        android:layout_width="@dimen/space_120"
        android:layout_height="@dimen/space_120"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/loading"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/space_40"
            android:layout_height="@dimen/space_4"
            android:layout_marginTop="@dimen/space_20"
            android:layout_centerHorizontal="true"
            android:background="@color/color_base04" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="@dimen/space_16"
            android:layout_below="@+id/view"
            android:layout_above="@+id/btn_layout"/>

        <LinearLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/space_16"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_select"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_54"
                android:layout_marginStart="@dimen/space_12"
                android:layout_marginEnd="@dimen/space_4"
                android:layout_weight="1"
                android:background="@drawable/button_select_bg"
                android:minHeight="@dimen/space_40">

                <TextView
                    android:id="@+id/btn_select_txt"
                    style="@style/font_sb_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:letterSpacing="-0.01"
                    android:text="@string/str_select_valuables"
                    android:textAllCaps="false"
                    android:textColor="@color/color_base01"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"
                    android:layout_centerInParent="true"
                    android:theme="@style/progressbar_color_under_api21"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_54"
                android:layout_marginEnd="@dimen/space_12"
                android:layout_marginStart="@dimen/space_4"
                android:background="@drawable/button_common_bg"
                android:layout_weight="1"
                android:minHeight="@dimen/space_40">

                <TextView
                    style="@style/font_sb_14"
                    android:textColor="@color/color_base01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/str_confirm" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>