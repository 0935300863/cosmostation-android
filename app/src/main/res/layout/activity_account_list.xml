<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_cosmos"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_bar_height"
        android:background="@color/colorBlack"
        android:theme="@style/AppTheme.AppBarOverlay">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_4"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/font_ssm_17_white"
                android:text="@string/str_wallet_manage"/>
            <TextView
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="@dimen/space_16"
                style="@style/font_ssm_17_white"
                android:text="@string/str_edit"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:paddingTop="@dimen/space_4"
        android:layout_above="@+id/add_layer"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chain_recycler"
            android:layout_width="@dimen/space_92"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/space_4"
            android:clipToPadding="false"
            android:overScrollMode="never"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/account_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/space_4"
            android:clipToPadding="false"
            android:overScrollMode="never"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/space_16"
        android:layout_marginLeft="@dimen/space_16"
        android:layout_marginRight="@dimen/space_16">
        <Button
            android:id="@+id/btn_add_wallet"
            style="@style/font_ss_14_photon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45"
            android:background="@drawable/btn_trans_with_border"
            android:minHeight="@dimen/space_45"
            android:text="@string/str_add_new"
            android:textAllCaps="false" />
    </LinearLayout>
</RelativeLayout>
