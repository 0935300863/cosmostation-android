<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="@dimen/space_6"
        android:layout_marginRight="@dimen/space_12"
        app:cardBackgroundColor="@color/colorTransBg"
        app:cardCornerRadius="@dimen/space_8"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_14">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/vesting_title"
                    style="@style/font_rr_14_black_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/str_vesting_schedule" />

                <TextView
                    android:id="@+id/vesting_count"
                    style="@style/font_rr_14_black_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:text="-" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_view"
                android:layout_marginTop="@dimen/space_12"
                android:background="@color/colorGrayDayNight" />

            <RelativeLayout
                android:id="@+id/vesting_layer0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8">

                <TextView
                    android:id="@+id/vesting_time0"
                    style="@style/font_rr_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/vesting_gap0"
                    style="@style/font_rr_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vesting_time0"
                    android:text="-" />

                <TextView
                    android:id="@+id/vesting_amount0"
                    style="@style/font_rr_12_black_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vesting_layer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">

                <TextView
                    android:id="@+id/vesting_time1"
                    style="@style/font_rr_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/vesting_gap1"
                    style="@style/font_rr_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vesting_time1"
                    android:text="-" />

                <TextView
                    android:id="@+id/vesting_amount1"
                    style="@style/font_rr_12_black_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vesting_layer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">

                <TextView
                    android:id="@+id/vesting_time2"
                    style="@style/font_rr_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/vesting_gap2"
                    style="@style/font_rr_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vesting_time2"
                    android:text="-" />

                <TextView
                    android:id="@+id/vesting_amount2"
                    style="@style/font_rr_12_black_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vesting_layer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">

                <TextView
                    android:id="@+id/vesting_time3"
                    style="@style/font_rr_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/vesting_gap3"
                    style="@style/font_rr_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vesting_time3"
                    android:text="-" />

                <TextView
                    android:id="@+id/vesting_amount3"
                    style="@style/font_rr_12_black_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="-" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/vesting_layer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:visibility="gone">

                <TextView
                    android:id="@+id/vesting_time4"
                    style="@style/font_rr_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/vesting_gap4"
                    style="@style/font_rr_11_gray1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/vesting_time4"
                    android:text="-" />

                <TextView
                    android:id="@+id/vesting_amount4"
                    style="@style/font_rr_12_black_daynight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="middle"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="-" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>