<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottomsheet_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            style="@style/font_sb_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_20"
            android:layout_marginTop="@dimen/space_20"
            android:gravity="start"
            android:textColor="@color/color_base01" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:layout_marginHorizontal="@dimen/space_16"
            android:layout_marginTop="@dimen/space_20"
            android:background="@color/color_base07"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title" />

        <TextView
            android:id="@+id/dialog_body"
            style="@style/font_sb_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_20"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_20"
            android:textColor="@color/color_base01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_close"
                style="@style/font_sb_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_6"
                android:layout_weight="1"
                android:background="@drawable/button_common_bg"
                android:text="@string/str_close"
                android:textAllCaps="false"
                android:textColor="@color/color_base01" />

            <Button
                android:id="@+id/btn_explorer"
                style="@style/font_sb_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_6"
                android:layout_weight="1"
                android:background="@drawable/button_common_bg"
                android:text="@string/str_mintscan"
                android:textAllCaps="false"
                android:textColor="@color/color_base01" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
