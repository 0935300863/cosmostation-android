<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.chain.CosmosDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStart="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/space_28"
            android:layout_height="@dimen/space_28"
            android:layout_marginLeft="@dimen/space_20"
            android:src="@drawable/icon_back" />

        <ImageView
            android:id="@+id/btn_account"
            android:layout_width="@dimen/space_28"
            android:layout_height="@dimen/space_28"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/space_20"
            android:src="@drawable/icon_account" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/account_address"
        android:layout_width="@dimen/space_130"
        android:layout_height="wrap_content"
        style="@style/font_sm_12"
        android:textColor="@color/color_base02"
        android:layout_marginTop="@dimen/space_20"
        android:ellipsize="middle"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/account_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/font_sb_24"
        android:textColor="@color/color_base01"
        android:layout_marginTop="@dimen/space_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_address" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:tabTextAppearance="@style/tab_text"
        app:tabTextColor="@color/color_base03"
        app:tabSelectedTextColor="@color/color_base01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_value"
        android:layout_marginHorizontal="@dimen/space_16"
        android:layout_marginTop="@dimen/space_24"
        app:tabGravity="start"
        app:tabIndicatorHeight="2dp"
        app:tabMode="scrollable"
        app:tabIndicatorFullWidth="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/color_base04"
        android:layout_marginHorizontal="@dimen/space_12"
        android:layout_marginTop="-1.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>