<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/earning_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_12"
        android:layout_marginVertical="@dimen/space_8"
        android:elevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/moniker_img"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_40"
                android:layout_marginVertical="@dimen/space_14"
                android:layout_marginStart="@dimen/space_16"
                android:src="@drawable/icon_default_vaildator"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/jailed_img"
                android:layout_width="@dimen/space_40"
                android:layout_height="@dimen/space_40"
                android:layout_centerInParent="true"
                android:layout_marginVertical="@dimen/space_14"
                android:layout_marginStart="@dimen/space_16"
                android:src="@drawable/icon_jailed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/moniker"
                style="@style/font_sb_14"
                android:layout_width="@dimen/space_120"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space_10"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/color_base01"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/moniker_img"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/moniker"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/deposit_available"
                    style="@style/font_sb_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_20"
                    android:layout_marginEnd="@dimen/space_2"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textColor="@color/color_base01"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/deposit_available_denom"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/deposit_available_denom"
                    style="@style/font_sb_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KAVA"
                    android:textColor="@color/color_base01"
                    app:layout_constraintBaseline_toBaselineOf="@+id/deposit_available"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>