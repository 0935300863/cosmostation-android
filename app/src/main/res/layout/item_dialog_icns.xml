<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTrans"
    android:paddingTop="@dimen/space_4"
    android:paddingBottom="@dimen/space_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/box_chain_trans_border"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/space_4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_4"
            android:paddingBottom="@dimen/space_4">

            <ImageView
                android:id="@+id/icns_img"
                android:layout_width="@dimen/space_36"
                android:layout_height="@dimen/space_36"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_icns" />

            <TextView
                android:id="@+id/icns_address"
                style="@style/font_rmr_12_black_daynight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_4"
                android:layout_marginRight="@dimen/space_6"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/icns_img"
                android:ellipsize="middle"
                android:singleLine="true"
                android:text="cosmos1qwl879nx9t6kef4supyazayf7vjhennyjqwjgrdsfdsfsdfadfasdfasdfadf" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>